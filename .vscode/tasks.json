{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",

                "-g",
                "${file}",   /* 编译单个文件 */
                // "${fileDirname}/Eigen/**",
                "${fileDirname}/myLib/*.cpp",


                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                /* 项目所需的头文件路径 */
                "-I","${workspaceFolder}/",
                "-I","${workspaceFolder}/myLib",

                "-I","/usr/local/include/",
                "-I","/usr/local/cuda-10.2/include/",
                "-I","/usr/local/include/opencv4/",
    
                /* 项目所需的库文件路径 */
                "-L", "/usr/local/lib",
    
                /* OpenCV的lib库 */
                "/usr/local/lib/libopencv_*",

                /* muti thread */
                "-lpthread",
                "-lm",
                "-lstdc++"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}